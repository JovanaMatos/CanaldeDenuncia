    copyTextId.addEventListener('click', function () {
        var copyTextId = document.querySelector('#identityId');
        copyTextId.select();
        document.execCommand('copy');


    });

    copyPass.addEventListener('click', function () {//evento copiar passWord
        var copyPass = document.querySelector('#passwordId');
        copyPass.select();

        document.execCommand('copy');

    });



    togglePassword.addEventListener("click", function () { // ocultar passWord
        const type = password.type === "password" ? "text" : "password";

        password.type = type;


        this.classList.toggle("fa-eye");
        this.classList.toggle("fa-eye-slash");
    });



