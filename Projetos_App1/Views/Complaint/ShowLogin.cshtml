<form>
    <div class="form-group">

        <div>
            <label>Código:</label>
            <br />
            <input style="outline:none;border: 0 none; width:94%;" type="text" id="identityId" value="@Model.ComplaintId" />
            <i style="padding-left: 20px;" id="copyId" class="fa-regular fa-copy"></i>
        </div>
        <hr />

        <br />

        <div class="password-container">
            <label>PassWord:</label>
            <br />
            <input  style="outline:none;border: 0 none; width:92%;" type="password" id="passwordId" value="@Model.PassWord" />
            <i id="togglePassword" class="fas fa-eye"></i>
            <i style="padding-left: 20px;" id="copyPass" class="fa-regular fa-copy"></i>
        </div>
    </div>

    @* <p>@Model.PassWord</p> *@
    <hr />

    <br />
    
    <div class="d-grid gap-2 col-5 mx-auto">
    <a asp-route-id="@Model.ComplaintId"  asp-controller="Complaint" asp-action="ShowPDF">
    <button class="btn bnt-home1" type="button">GUARDAR COMO PDF</button>
    </a>
    </div>




    <br />
    <div class="mb-4">
        <input type="email" style="outline:none;border: 0 none;" id="" placeholder="Email (opcional)">
    </div>

    <br />

    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="checkboxId">
        <label class="form-check-label" for="exampleCheck1">Já Guardei o meu código e password da denúncia.</label>
    </div>

    <br />

    <div class="d-grid gap-2">
        <button id="buttonId" type="button" class="btn btn-secondary btn-lg btn-block align-content-center">FINALIZAR</button>
    </div>

</form>
<br />
<br />


