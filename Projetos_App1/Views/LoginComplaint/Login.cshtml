@model Projetos_App1.ViewModels.LoginComplaintViewModel


<br />


<div class="text-center" id="homeTitle">
    <h1>Consultar Denúncia</h1>
</div>

<br />
<br />
<form asp-controller="LoginComplaint" asp-action="Login" method="post" class="form-horizontal" role="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <div>
            <label asp-for="@Model.ComplaintId">Código:</label> <br />
            <input asp-for="@Model.ComplaintId" style="outline:none;border: 0 none; width:94%;" type="text" id="identityId" name="ComplaintId" />
         
        </div>
        <hr />
        <span asp-validation-for="@Model.ComplaintId" class="text-danger"></span>
        <br />
        <br />


        <div class="password-container">
            <label asp-for="@Model.PassWord">Senha:</label><br />
            <input asp-for="@Model.PassWord" style="outline:none;border: 0 none; width:92%; font: large; " type="password" id="passwordId" name="PassWord" />
           
        </div>
        <hr />
        <span asp-validation-for="@Model.PassWord" class="text-danger"></span>
        <br />
        <span class="text-danger">@ViewData["LoginError"]</span>
        <br />
        <div class="d-grid gap-2 col-6 mx-auto text-center">
            <button type="submit" class="btn btn-secondary btn-lg">ACEDER</button>
        </div>
    </div>
</form>



