@model Projetos_App1.ViewModels.AccessComplaintViewModel
@{
    ViewData["Title"] = "DetailsComplaint";
}
<link href="https://fonts.googleapis.com/css2?family=Lobster&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900&display=swap" rel="stylesheet" />

<style>
    .new-font, label {
        font-family: Roboto, sans-serif;
        font-weight: bold;
        color: rgba(26,51,94,255);
    }

    /* barra de progresso*/

    :root { /* bola selacionada */
        --primary-color: #40bd6b;
    }

    /* Progressbar */
    .progressbar {
        position: relative;
        display: flex;
        justify-content: space-between;
        counter-reset: step;
        margin: 2rem 0 4rem;
        font-family: "Roboto", sans-serif;
        color: red;
    }

        .progressbar::before,
        .progress {
            content: "";
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            height: 4px;
            width: 100%;
            background-color: rgba(26,51,94,255); /* linhada progresso */
            z-index: -1;
        }

    .progress {
        background-color: var(--primary-color);
        width: 0%;
        transition: 0.3s;
    }

    .progress-step {
        width: 2.1875rem;
        height: 2.1875rem;
        background-color: rgba(26,51,94,255);
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        font-family: "Roboto", sans-serif;
    }

        .progress-step::before {
            counter-increment: step;
            content: counter(step);
        }

        .progress-step::after {
            content: attr(data-title);
            position: absolute;
            top: calc(100% + 0.5rem);
            font-size: 0.85rem;
            color: rgba(26,51,94,255); /*  cor da letra do stp */
            font-family: "Roboto", sans-serif;
            font-weight: bold;
        }

    .progress-step-active {
        background-color: var(--primary-color);
        color: white;
        font-family: "Roboto", sans-serif;
    }
</style>

<div class="text-center" id="homeTitle">
    <h1>Consultar Denúncia</h1>
</div>



<br />


<div class="progressbar">
    <div class="progress" id="progress"></div>

    <div class="progress-step progress-step-active"
         data-title="Recebida"></div>
    <div class="progress-step" data-title="Em Análise"></div>
    <div class="progress-step" data-title="Em Tratamento"></div>
    <div class="progress-step" data-title="Em Finalização"></div>
    <div style="font-family:Arial;" class="progress-step" data-title="Concluída"></div>
</div>


<br />
<form>
    <fieldset disabled>
        <div class="mb-3">
            <label class="new-font" for="ComplaintSubject">Assunto </label>
            <input disabled value="@Model.ComplaintSubject" type="text" class="form-control">
        </div>


        <div class="row">
            <div class="col">
                <label class="new-font">Empresa</label>
                <select value="@Model.Company" id="companyId" name="companyId" class="form-select">
                    <option value="@Model.Company" selected>@Model.Company</option>

                </select>

            </div>


            <div class="col">
                <label class="new-font">Relação com a Empresa</label>
                <select name="CompanyRelationId" class="form-select">
                    <option value="@Model.CompanyRelation" selected>@Model.CompanyRelation</option>

                </select>


            </div>
        </div>
        <br />
        <label class="new-font">Categoria</label>
        <select class="form-select" id="categoryid">
            <option value="@Model.Category" selected>@Model.Category</option>
        </select>

        <br />


        <div class="form-group">
            <label class="new-font">Descrição</label>
            <textarea class="form-control" title="Campo obrigatório" placeholder="Descrição" id="textInput" rows="15" required>@Model.ComplaintDescription</textarea>
        </div>

        <br />
        <div class="form-group">
            <label for="inputFile" class="new-font">Arquivos adicionados</label>
            <textarea class="form-control" id="inputFile" rows="5" readonly>
                @foreach (var nameFile in Model._filesName)
                {   
                    @nameFile
                    <text>
</text>
                }
    </textarea>
        </div>
    </fieldset>
</form>

